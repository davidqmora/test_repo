@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MyRadarTheme/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0" Style="z-index: unset !important;">
        <MudText Typo="Typo.h4">Lamarr Test UI</MudText>
        <AuthorizedNavMenu/>
        <MudSpacer/>
        <LoginDisplay/>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@inject ISnackbar Snackbar

@code {

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomLeft;
    }

}